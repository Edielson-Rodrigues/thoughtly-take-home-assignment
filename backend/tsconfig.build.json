{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"], 
  "exclude": [
    "node_modules",
    "dist",
    "test", 
    "src/**/__test__/**/*",
    "src/**/__mocks__/**/*",
    "src/**/*.test.ts",
    "src/**/*.mock.ts"
  ]
}